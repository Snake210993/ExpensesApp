<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesAppCpp.ExpenditureCollection"
             Title="Expenditure Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                Text="Expenditure Collection"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Label
                Text="Here you can view and manage your expenditures."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Subtitle" />
            <!-- Add more UI elements here for displaying expenditures -->
            <Button
                Text="Back"
                TextColor="{StaticResource Secondary}"
                BackgroundColor="{StaticResource Primary}"
                SemanticProperties.Hint="Returns to Main Page"
                Clicked="OnBack"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>